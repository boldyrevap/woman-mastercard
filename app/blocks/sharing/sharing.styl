.sharing
	padding w(20) w(15)
	display flex
	flex-flow row nowrap
	justify-content space-between
	align-items center
	width 100%
	background-color #0A1214
	color #0A1214
	+below(768px)
		padding wv(20) wv(15)

	&__text
		font-size w(32)
		color white

		+below(768px)
			font-size wv(24)

	&__list
		display flex
		flex-wrap nowrap

	&__item
		display inline-block
		margin-right w(10)
		border 1px solid white
		width w(35)
		height w(35)
		transition background-color .3s

		+below(768px)
			width wv(25)
			height wv(25)
			margin-right wv(5)

		&:last-of-type
			margin-right 0

		&:hover
			background-color white
			svg
				fill #0A1214

	&__link
		display flex
		justify-content center
		align-items center
		width 100%
		height 100%
		svg
			width 60%
			height auto
			fill white
			transition fill .3s
